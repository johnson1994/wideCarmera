#ifndef combine_h
#define combine_h

#include<iostream>
#include "opencv2/highgui/highgui.hpp"  
#include "opencv2/stitching.hpp" 

using namespace std;
using namespace cv;

class Combine{
	public:
		Combine(){
			try_use_gpu=false;
			result_name="result.jpg";
		}
		Combine(bool gpu,string name){
			try_use_gpu=gpu;
			result_name=name;
		}

		int init();
		int takeImg(string address);
		int doCombine(); 

	private:
		bool try_use_gpu;
		string result_name;
};

#endif


